<launch>
  <!-- start publishing odometry data and running base controller -->
  <include
    file="$(find ros_arduino_python)/launch/arduino.launch"
  />
  <!-- Publish static transform: base_link to base_footprint -->
  <node
    pkg="tf"
    type="static_transform_publisher"
    name="base_link_to_base_footprint"
    args="0 0 -0.025 0 0 0 /base_link /base_footprint 100"
  />
  <!-- start teleop_twist_keyboard to controll saturn robot -->
  <node
    pkg="teleop_twist_keyboard"
    type="teleop_twist_keyboard.py"
    name="saturn_teleop"
    launch-prefix="xterm -e"
  />
</launch>
